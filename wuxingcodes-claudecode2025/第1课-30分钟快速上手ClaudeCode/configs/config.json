{
  "_comment": "ClaudeCode配置文件 v1.1 - 更新日期：2025-12-14",
  "_model_version": "兼容ClaudeCode v2.0+",
  "model": "claude-3-5-sonnet-20240620",
  "maxTokens": 4096,
  "temperature": 0.1,
  "topP": 0.95,
  "theme": "dark",
  "autoSave": true,
  "keybindings": "vscode",
  "fontSize": 14,
  "fontFamily": "JetBrains Mono",
  "lineNumbers": true,
  "wordWrap": true,
  "statusLine": {
    "enabled": true,
    "format": "{{model}} | {{tokens}}"
  },
  "permissions": {
    "allowedTools": [
      "Read(**/*)",
      "Edit(**/*.{js,ts,jsx,tsx,py,java,cpp,c,h,go,rs,php,rb,swift,kt,scala})",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(mvn:*)",
      "Bash(gradle:*)",
      "Bash(cargo:*)",
      "Bash(docker:*)",
      "Bash(make:*)",
      "Bash(gcc:*)",
      "Bash(g++:*)",
      "Bash(javac:*)",
      "Bash(java:*)",
      "Bash(python3:*)"
    ],
    "deniedTools": [
      "Edit(/etc/*)",
      "Edit(/usr/local/etc/*)",
      "Edit(/System/*)",
      "Bash(rm -rf:*)",
      "Bash(sudo rm -rf:*)",
      "Bash(chmod 777:*)",
      "Bash(dd:*)",
      "Bash(format:*)"
    ],
    "permissionMode": "acceptEdits"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Executing command: {{command}}'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'File edited: {{file}}'"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "type": "command",
        "command": "echo 'ClaudeCode session started'"
      }
    ]
  },
  "plugins": {
    "enabled": ["git", "docker"],
    "autoLoad": true,
    "config": {
      "git": {
        "autoCommit": false,
        "autoPush": false,
        "commitTemplate": "{message}\n\nGenerated by ClaudeCode"
      }
    }
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."]
    }
  },
  "sandbox": {
    "allowUnsandboxedCommands": false
  },
  "logging": {
    "level": "info",
    "file": "~/.claude/logs/claude.log",
    "maxSize": "10MB",
    "maxFiles": 5
  },
  "cache": {
    "enabled": true,
    "maxSize": "1GB",
    "ttl": "24h"
  }
}